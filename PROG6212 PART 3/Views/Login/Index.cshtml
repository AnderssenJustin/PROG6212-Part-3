@model PROG6212_PART_3.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #0d6efd, #6610f2);">
                    <h4><i class="bi bi-person-lock"></i> Lecturer Claims System Login</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> @TempData["Success"]
                        </div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i> @ViewBag.Error
                        </div>
                    }

                    <form asp-action="Index" asp-controller="Login" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label"><strong>Username</strong></label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username" autofocus />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"><strong>Password</strong></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg shadow-sm">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </button>
                    </form>

                    <div class="mt-4 text-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i>
                            Contact HR if you need login credentials or have forgotten your password.
                        </small>
                    </div>
                </div>
                <div class="card-footer text-center text-muted small">
                    &copy; @DateTime.Now.Year - Lecturer Claims Management System
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
