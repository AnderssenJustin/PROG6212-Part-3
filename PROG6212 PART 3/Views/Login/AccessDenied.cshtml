@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="text-danger fw-bold mb-3">Access Denied</h2>
                    <p class="lead mb-4">You do not have permission to access this page.</p>
                    <p class="text-muted mb-4">
                        This page is restricted to specific user roles. If you believe you should have access to this page,
                        please contact your system administrator or HR department.
                    </p>

                    <div class="d-grid gap-2">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            var role = Context.Session.GetString("Role");
                            @if (role == "HR")
                            {
                                <a asp-controller="HR" asp-action="ManageUsers" class="btn btn-primary btn-lg">
                                    <i class="bi bi-house-door"></i> Go to Dashboard
                                </a>
                            }
                            else if (role == "Lecturer")
                            {
                                <a asp-controller="Lecturer" asp-action="Dashboard" class="btn btn-primary btn-lg">
                                    <i class="bi bi-house-door"></i> Go to Dashboard
                                </a>
                            }
                            else if (role == "ProgrammeCoordinator")
                            {
                                <a asp-controller="ProgrammeCoOrdinator" asp-action="ApproveClaim" class="btn btn-primary btn-lg">
                                    <i class="bi bi-house-door"></i> Go to Dashboard
                                </a>
                            }
                            else if (role == "AcademicManager")
                            {
                                <a asp-controller="AcademicManager" asp-action="ClaimApproval" class="btn btn-primary btn-lg">
                                    <i class="bi bi-house-door"></i> Go to Dashboard
                                </a>
                            }
                        }
                        else
                        {
                            <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Go to Login
                            </a>
                        }
                    </div>
                </div>
                <div class="card-footer text-muted small">
                    <i class="bi bi-info-circle"></i> Contact HR if you need assistance
                </div>
            </div>
        </div>
    </div>
</div>
