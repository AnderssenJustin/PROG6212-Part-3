@model PROG6212_PART_3.Models.Claim

@{
    ViewBag.Title = "Submit Claim";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Please Submit Your Claim</h2>
        <div class="mx-auto" style="height:5px; width:100px; background: linear-gradient(90deg, #0d6efd, #6610f2); border-radius:3px; margin-bottom:10px;"></div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm p-4">
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" id="claimForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="LecturerName" class="form-label"><strong>Name and Surname</strong></label>
                <input asp-for="LecturerName" class="form-control" placeholder="Please enter your Name and Surname" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HoursWorked" class="form-label"><strong>Hours Worked</strong></label>
                <input asp-for="HoursWorked" type="number" step="0.1" min="0.1" max="200" class="form-control" id="hoursWorked" placeholder="Please enter number of hours" oninput="calculateTotal()" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                <small class="text-muted">Must be between 0.1 and 200 hours</small>
            </div>

            <div class="mb-3">
                <label asp-for="HourlyRate" class="form-label"><strong>Hourly Rate (R)</strong></label>
                <input asp-for="HourlyRate" type="number" step="0.01" min="50" max="1000" class="form-control" id="hourlyRate" placeholder="Please enter your hourly rate" oninput="calculateTotal()" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                <small class="text-muted">Must be between R50 and R1000</small>
            </div>

            <!-- Auto-calculation display -->
            <div class="mb-3">
                <div class="alert alert-info">
                    <h5><strong>Auto-Calculated Total Amount:</strong></h5>
                    <h3 id="totalAmount" class="text-primary">R 0.00</h3>
                    <small class="text-muted">This amount is automatically calculated based on hours worked and hourly rate</small>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label"><strong>Any Additional Notes</strong></label>
                <textarea asp-for="Notes" rows="4" class="form-control" maxlength="500" placeholder="Please enter any additional notes"></textarea>
                <small class="text-muted">Maximum 500 characters</small>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Upload Supporting Documentation</strong></label>
                <input type="file" name="document" class="form-control" accept=".pdf,.docx,.xlsx,.png,.jpg,.jpeg" id="documentUpload" />
                <small class="text-muted">Allowed formats: PDF, DOCX, XLSX, PNG, JPG (Max 5MB)</small>
                <div id="fileValidation" class="mt-2"></div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary btn-lg shadow-sm">Submit Claim</button>
                <a asp-action="Dashboard" class="btn btn-secondary btn-lg shadow-sm">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Auto-calculation function
        function calculateTotal() {
            var hours = parseFloat(document.getElementById('hoursWorked').value) || 0;
            var rate = parseFloat(document.getElementById('hourlyRate').value) || 0;
            var total = hours * rate;

            document.getElementById('totalAmount').textContent = 'R ' + total.toFixed(2);

            // Validation warnings
            if (total > 50000) {
                document.getElementById('totalAmount').className = 'text-danger';
                alert('Warning: Total amount exceeds R50,000 limit!');
            } else {
                document.getElementById('totalAmount').className = 'text-primary';
            }
        }

        // File validation
        document.getElementById('documentUpload').addEventListener('change', function(e) {
            var file = e.target.files[0];
            var validationDiv = document.getElementById('fileValidation');

            if (file) {
                var fileSize = file.size / 1024 / 1024; // in MB
                var fileName = file.name;
                var fileExt = fileName.substring(fileName.lastIndexOf('.')).toLowerCase();
                var allowedExts = ['.pdf', '.docx', '.xlsx', '.png', '.jpg', '.jpeg'];

                if (fileSize > 5) {
                    validationDiv.innerHTML = '<span class="text-danger">File too large! Maximum size is 5MB</span>';
                    e.target.value = '';
                } else if (!allowedExts.includes(fileExt)) {
                    validationDiv.innerHTML = '<span class="text-danger">Invalid file type! Only PDF, DOCX, XLSX, PNG, JPG allowed</span>';
                    e.target.value = '';
                } else {
                    validationDiv.innerHTML = '<span class="text-success">✓ File valid: ' + fileName + ' (' + fileSize.toFixed(2) + ' MB)</span>';
                }
            }
        });

        // Initialize calculation on page load
        window.onload = function() {
            calculateTotal();
        };
    </script>
}