@model PROG6212_PART_3.Models.ViewModels.UserViewModel

@{
    ViewBag.Title = "Create User";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Create New User</h2>
        <div class="mx-auto" style="height:5px; width:100px; background: linear-gradient(90deg, #0d6efd, #6610f2); border-radius:3px; margin-bottom:10px;"></div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <form asp-action="CreateUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label"><strong>First Name</strong></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label"><strong>Last Name</strong></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"><strong>Email</strong></label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Username" class="form-label"><strong>Username</strong></label>
                            <input asp-for="Username" class="form-control" placeholder="Enter username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <small class="text-muted">User will use this to login</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label"><strong>Password</strong></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="text-muted">Minimum 6 characters</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Role" class="form-label"><strong>Role</strong></label>
                            <select asp-for="Role" class="form-select" id="roleSelect">
                                <option value="">-- Select Role --</option>
                                <option value="HR">HR (Super User)</option>
                                <option value="Lecturer">Lecturer</option>
                                <option value="ProgrammeCoordinator">Programme Coordinator</option>
                                <option value="AcademicManager">Academic Manager</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3" id="hourlyRateDiv">
                            <label asp-for="HourlyRate" class="form-label"><strong>Hourly Rate (R)</strong></label>
                            <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" placeholder="Enter hourly rate" />
                            <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            <small class="text-muted">Only required for Lecturers</small>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label">
                            User is Active
                        </label>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> <strong>Note:</strong> The user will receive their login credentials. Make sure to provide them with their username and password.
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-person-plus"></i> Create User
                        </button>
                        <a asp-action="ManageUsers" class="btn btn-secondary btn-lg shadow-sm">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Show/hide hourly rate based on role
        document.getElementById('roleSelect').addEventListener('change', function() {
            var hourlyRateDiv = document.getElementById('hourlyRateDiv');
            if (this.value === 'Lecturer') {
                hourlyRateDiv.style.display = 'block';
            } else {
                hourlyRateDiv.style.display = 'none';
                document.querySelector('input[name="HourlyRate"]').value = '0';
            }
        });

        // Initialize on page load
        window.onload = function() {
            var roleSelect = document.getElementById('roleSelect');
            if (roleSelect.value !== 'Lecturer') {
                document.getElementById('hourlyRateDiv').style.display = 'none';
            }
        };
    </script>
}
