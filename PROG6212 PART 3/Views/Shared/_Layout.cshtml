@using PROG6212_PART_3.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lecturer Claims System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background: linear-gradient(90deg, #0d6efd, #6610f2);">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-clipboard-check"></i> Lecturer Claims System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (Context.Session.IsLoggedIn())
                        {
                            var userRole = Context.Session.GetUserRole();

                            @if (userRole == "HR")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="HR" asp-action="ManageUsers">
                                        <i class="bi bi-people"></i> Manage Users
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="HR" asp-action="HRDashboard">
                                        <i class="bi bi-file-earmark-text"></i> Reports
                                    </a>
                                </li>
                            }
                            else if (userRole == "Lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Lecturer" asp-action="Dashboard">
                                        <i class="bi bi-house-door"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Lecturer" asp-action="SubmitClaim">
                                        <i class="bi bi-file-earmark-plus"></i> Submit Claim
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Lecturer" asp-action="ClaimStatus">
                                        <i class="bi bi-list-check"></i> My Claims
                                    </a>
                                </li>
                            }
                            else if (userRole == "ProgrammeCoordinator")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ProgrammeCoOrdinator" asp-action="ApproveClaim">
                                        <i class="bi bi-clipboard-check"></i> Approve Claims
                                    </a>
                                </li>
                            }
                            else if (userRole == "AcademicManager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AcademicManager" asp-action="ClaimApproval">
                                        <i class="bi bi-clipboard2-check"></i> Final Approval
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- LOGIN / LOGOUT BUTTONS -->
                    <div class="d-flex align-items-center">
                        @if (Context.Session.IsLoggedIn())
                        {
                            <span class="me-3 text-white">
                                <i class="bi bi-person-circle"></i>
                                <strong>@Context.Session.GetFullName()</strong>
                                <span class="badge bg-light text-dark ms-1">@Context.Session.GetUserRole()</span>
                            </span>
                            <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-light">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Login" asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container">
            <div class="row py-3">
                <div class="col-md-6">
                    &copy; @DateTime.Now.Year - Lecturer Claims Management System
                </div>
                <div class="col-md-6 text-end">
                    <i class="bi bi-shield-check"></i> Secure Claims Processing
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>